
<div class="container mt-5">

<% if notice !=nil %>    
<div class="alert alert-danger" role="alert">
  <%= notice %>
</div>
<% end %>

    <table class="table table-hover">
      <tr>
          <th>No</th>
          <th>Name</th>
          <th>Nomor Telepon</th>
          <th>Email</th>
          <th>Aksi</th>
      </tr>
      <% index= 1 
      @contacts.each do |contact| %>    
      <tr>
      
          <td><%=index %></td>
          <td><%=contact.name %></td>
          <td><%=contact.phone_number %></td>
          <td><%=contact.email %></td>
          <td> <a href="/contacts/<%= contact.id%>/edit" class="btn btn-warning btn-sm mx-2">Edit</a> <a href="/contacts/<%= contact.id%>" class="btn btn-primary btn-sm mx-2">Detail</a> <%= button_to "Hapus Data", contact, method: :delete,class:'btn btn-danger btn-sm' %> </td>
      </tr>
      <% end %>
    </table>
</div>

